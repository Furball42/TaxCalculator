@{
    ViewData["Title"] = "Postal Codes";
}

<link rel="stylesheet" href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-10">
            <div class="card">
                <h5 class="card-header">
                    Calculations
                </h5>
                <div class="card-body">
                    <table id="postalCodeTable" class="display">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="card-footer">
                    <form id="frmPostalCode">
                        <div class="form-group">
                            <h3>Create New Postal Code</h3>
                        </div>
                        <div class="form-group">
                            <label for="txtPostalCode">
                                Postal Code
                            </label>
                            <input id="txtPostalCode" type="text" class="form-control" placeholder="Postal Code" />
                        </div>
                        <div class="form-group">
                            <label for="ddlCalculationType">
                                Calculation Type
                            </label>
                            <select id="ddlCalculationType" class="form-control" aria-label="Calculation Type">
                            </select>
                        </div>
                        <div class="row">
                            <div class="col-md-12" id="warning">
                                <div class="alert alert-warning">
                                    Please complete all fields.
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button id="btnSubmit" type="button" class="btn btn-primary">
                                Add
                            </button>
                            <button id="btnReset" type="button" class="btn btn-success">
                                Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-1">
        </div>
    </div>
</div>

<!-- Modal -->
<div id="messageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="messegeModalHeader" class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <div id="messageModalText"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

@section scripts {

    <script src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

    <script src="~/js/PostalCode/Index.js"></script>

}